---
import FullPageLayout from '../layouts/FullPageLayout.astro';
import { cn, getPage } from '@/utils';
import { Page } from '@/types';
import RenderBackgrounds from '@/components/common/RenderBackgrounds';
import WavifyNavbar from "@/components/sections/WavifyNavbar";
import WavifyHero from "@/components/sections/WavifyHero";
import WavifyLogos from "@/components/sections/WavifyLogos";
import WavifyFeature from "@/components/sections/WavifyFeature";
import WavifyContent from "@/components/sections/WavifyContent";
import WavifyStats from "@/components/sections/WavifyStats";
import WavifyTestimonial from "@/components/sections/WavifyTestimonial";
import WavifyAccordion from "@/components/sections/WavifyAccordion";
import WavifyCTA from "@/components/sections/WavifyCTA";
import WavifyFooter from "@/components/sections/WavifyFooter";


// Replace with an API request if needed
const pageId = 'home';
const page = getPage(pageId) as unknown as Page;
---

<FullPageLayout seo={page.seo}>
  <main class={cn('relative min-h-screen min-w-min overflow-clip max-w-[140rem] mx-auto', page.containerClasses)}>
    <RenderBackgrounds backgrounds={page.backgrounds || []} />

    <!-- Page Sections -->
    <WavifyNavbar client:load section={page.sections['WavifyNavbar']} />
<WavifyHero client:load section={page.sections['WavifyHero']} />
<WavifyLogos client:load section={page.sections['WavifyLogos']} />
<WavifyFeature client:load section={page.sections['WavifyFeature']} />
<WavifyContent client:load section={page.sections['WavifyContent']} />
<WavifyStats client:load section={page.sections['WavifyStats']} />
<WavifyTestimonial client:load section={page.sections['WavifyTestimonial']} />
<WavifyAccordion client:load section={page.sections['WavifyAccordion']} />
<WavifyCTA client:load section={page.sections['WavifyCTA']} />
<WavifyFooter client:load section={page.sections['WavifyFooter']} />

  </main>
</FullPageLayout>
